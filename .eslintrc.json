{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["off", "tab"],
    "linebreak-style": ["error", "linux"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["off"],
    "no-unused-vars": ["warn"],
    "no-empty": ["warn"]
  }
}
